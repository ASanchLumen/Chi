    textarea.c-input Sample text
    .c-icon
      svg
        use(xlink:href='#edit')

  :code(lang="html")
    <div class="c-input-wrapper c-input-wrapper--icon-right">
      <textarea class="c-input">
        Sample text
      </textarea>
      <div class="c-icon">
        <svg>
          <use xlink:href="#edit"></use>
        </svg>
      </div>
    </div>

.c-mb4
