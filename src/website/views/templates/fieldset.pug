      chi.floatingLabel(document.getElementById('bcity'));
      chi.floatingLabel(document.getElementById('bstate'));
      chi.floatingLabel(document.getElementById('bzip'));
      chi.floatingLabel(document.getElementById('bcname'));
      chi.floatingLabel(document.getElementById('bctitle'));
      chi.floatingLabel(document.getElementById('bcemail'));
      chi.floatingLabel(document.getElementById('bwebsite'));
      chi.floatingLabel(document.getElementById('bdunns_number'));
      chi.floatingLabel(document.getElementById('btax_id'));
    },
    false
  );
