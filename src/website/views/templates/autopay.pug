                        input(type="text", class="a-input -xl", placeholder="")
                  div.-d--flex.-justify-content--center.-align-items--center.-pt--3
                    img(src='../../assets/images/autopay-check-hint.png', alt="savings account")
              .a-card#checkingAccount.-mt--2.-d--none
