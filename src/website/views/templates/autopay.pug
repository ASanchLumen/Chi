script.
  function selectPay (value) {
    var credit = document.getElementById('creditDebitCard');
    var savings = document.getElementById('savingsAccount');
    var checking = document.getElementById('checkingAccount');
    if (value === 'Credit') {
      credit.style.display = 'block';
      savings.style.display = 'none';
      checking.style.display = 'none';
    } else if (value === 'Savings') {
      credit.style.display = 'none';
      savings.style.display = 'block';
      checking.style.display = 'none';
    } else {
      credit.style.display = 'none';
      savings.style.display = 'none';
      checking.style.display = 'block';
    }
  }

