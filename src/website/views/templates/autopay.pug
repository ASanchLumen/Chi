                        input(type="text", class="a-input -xl -mr-md--1", placeholder="")
                    div.a-col.-w--12.-w-md--6
                      h6 Account number
                      .m-formGroup.-mb--1
                        input(type="text", class="a-input -xl", placeholder="")
                    div.a-col.-w--12
                      .-d--flex.-justify-content--center.-mt--2
                        img.-mw--100.-h--auto(src='../../assets/images/autopay-check-hint.png', alt="savings account")
              .a-card#checkingAccount.-mt--2.-d--none
