      button.addEventListener('click', function (e) {
        e.preventDefault();
        var elems = document.querySelectorAll('a.-active');
        [].forEach.call(elems, function (el) {
          chi.Util.removeClass(el, '-active');
        });
        chi.Util.addClass(button, '-active');
        var target = chi.Util.getTarget(e.target);
        Array.prototype.forEach.call(target.parentElement.childNodes, function (card) {
          if (card !== target && chi.Util.hasClass(card, 'chi-card')) {
            card.style.display = 'none';
          }
        });
        target.style.display = 'block';
        elem.innerText = e.target.innerText;
      });
    });
  }
