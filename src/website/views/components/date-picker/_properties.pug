h3.-text--h4 Value and min options programmatically
.example.-mb--3
  .-p--3
    .chi-form__item
      label(class="chi-label", for="datepicker-4") Date
      .chi-input__wrapper.-icon--right(style="width:14rem;")
        input#datepicker-4.chi-input(type="text", placeholder="MM/DD/YYYY", value="")
        i.chi-icon.icon-date.-text--muted
  :code(lang="html",style="height:20rem")
    <div class="chi-form__item">
      <label class="chi-label" for="datepicker-4">Date</label>
      <div class="chi-input__wrapper -icon--right">
        <input id="datepicker-4" type="text" class="chi-input" placeholder="MM/DD/YYYY" value="">
        <i class="chi-icon icon-date -text--muted"></i>
      </div>
    </div>

    <script>
      chi.datePicker(
        document.getElementById('datepicker-4'),
        {
          date: '01/24/2019',
          min: '01/24/2019'
        }
    );
    </script>

