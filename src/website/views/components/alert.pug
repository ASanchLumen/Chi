      .m-alert.-toast.-m--2(class=`-${type}`)
        .m-alert__content
          i.a-icon.-sm--2(class =`${val} -text--${type}`)
          div
            div(class=`a-h5`)= type
            = `This is a ${type} alert`
        button(class='a-btn -icon -close -small')
