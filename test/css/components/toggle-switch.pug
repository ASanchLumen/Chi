.test-states
  .c-mb1
    h5 Base
    input(type="checkbox", class="c-toggle-switch", id="checkbox01")
    label(for="checkbox01")

  .c-mb1
    h5 Hover
    input(type="checkbox", class="c-toggle-switch", id="checkbox02")
