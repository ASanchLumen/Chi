---
title: File Inputs
---

each size, index in ['default', 'small', 'large']
  div(class=`test-${size}`)
    span.c-h2= `File Input / ${size}`
    table(cellpadding="0", cellspacing="0")
      tr
        td(width="100px")
          small initial
        td
          .c-m1
            input(type="file", id=`file-1-${index}`, class=`c-input c-input--${size}`)
            label(for=`file-1-${index}`) No file chosen
      tr
        td
          small hover
        td
          .c-m1
            input(type="file", id=`file-2-${index}`, class=`c-input c-input--${size}`)
            label(class="c-input--hover", for=`file-2-${index}`) No file chosen
      tr
        td
          small focus
        td
          .c-m1
            input(type="file", id=`file-3-${index}`, class=`c-input c-input--focus c-input--${size}`)
            label(for=`file-3-${index}`) No file chosen
      tr
        td
          small disabled
        td
          .c-m1
            input(type="file", id=`file-4-${index}`, class=`c-input c-input--${size}`, disabled)
            label(for=`file-4-${index}`) No file chosen
