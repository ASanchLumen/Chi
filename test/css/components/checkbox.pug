---
title: Checkbox
---

.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    .c-mb1
      h5= `Checkbox / ${state}`
      input.c-input(
        type="checkbox"
        id=`checkbox-${index}`
        class={
          [`c-input--${state}`]: state == 'focus'
        }
        checked=state=='checked' ? 'checked' : false
        disabled=state=='disabled' ? 'disabled' : false
      )
      label(
        for=`checkbox-${index}`
        class={
          [`c-input--${state}`]: state == 'hover'
        }
      )= `Checkbox ${index}`
