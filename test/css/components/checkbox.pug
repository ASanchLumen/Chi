h4 States

.test-states
  .c-mb1
    h5 Base
    input(type="checkbox", class="c-checkbox", id="checkbox01")
    label(for="checkbox01")
      svg
        use(xlink:href='#check')

  .c-mb1
    h5 Hover
    input(type="checkbox", class="c-checkbox", id="checkbox02")
    label(class="c-checkbox--hover", for="checkbox02")
      svg
        use(xlink:href='#check')

  .c-mb1
    h5 Focus
    input(type="checkbox", class="c-checkbox c-checkbox--focus", checked, id="checkbox03")
    label(for="checkbox03")
      svg
        use(xlink:href='#check')

  .c-mb1
    h5 Disabled
    input(type="checkbox", class="c-checkbox", id="checkbox04", checked, disabled)
    label(for="checkbox04")
      svg
        use(xlink:href='#check')

