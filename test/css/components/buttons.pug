---
title: Buttons
---
doctype html

img(inline src='test/css/components/icon-workspace.svg')

h2 Sizes
.test-sizes
  .c-grid
    .c-col(class=`c-col--1-xs
                  c-col--2-sm
                  c-col--4 c-col--middle`)
      h6 small
    .c-col(class=`c-col--3-xs
                  c-col--6-sm
                  c-col--8 c-col--middle`)
      button(class='c-btn c-btn--small c-mr1')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')
          span Button
      button(class='c-btn c-btn--icon c-btn--small')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')
  .c-grid.c-mb2
    .c-col(class=`c-col--3-xs c-col--offset-1-xs
                  c-col--6-sm c-col--offset-2-sm
                  c-col--8 c-col--offset-4 c-col--middle`)
      button(class='c-btn c-mr1')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')
          span Button
      button(class='c-btn c-btn--icon')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')
  .c-grid.c-mb2
    .c-col(class=`c-col--1-xs
                  c-col--2-sm
                  c-col--4 c-col--middle`)
      h6 large
    .c-col(class=`c-col--3-xs
                  c-col--6-sm
                  c-col--8 c-col--middle`)
      button(class='c-btn c-btn--large c-mr1')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')
          span Button
      button(class='c-btn c-btn--icon c-btn--large')
        .c-btn-content
          .c-icon
            svg
                use(xlink:href='#workspace')


h2 Styles
each type, index in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    h3= `${type} buttons`
    .c-grid
      .c-col(class=`c-col--3 c-col--offset-3 c-col--middle
                    c-col--1-xs c-col--offset-1-xs c-col--order-2-xs
                    c-col--2-sm c-col--offset-2-sm`)
        h6 hover
      .c-col(class=`c-col--3 c-col--middle
                    c-col--1-xs c-col--offset-1-xs c-col--order-4-xs
                    c-col--2-sm`)
        h6 active
      .c-col(class=`c-col--3 c-col--middle
                    c-col--1-xs c-col--offset-1-xs c-col--order-6-xs
                    c-col--2-sm`)
        h6 focus
      .c-col(class=`c-col--3 c-col--middle
                    c-col--2-xs c-col--offset-2-xs c-col--order-1-xs
                    c-col--2-sm`)
        button(class=`c-btn c-btn--${type} c-mr1`)
          .c-btn-content
            .c-icon
              svg
                  use(xlink:href='#workspace')
            span Button
        button(class=`c-btn c-btn--${type} c-btn--icon`)
          .c-btn-content
            .c-icon
              svg
                  use(xlink:href='#workspace')
      .c-col(class=`c-col--3 c-col--middle
                    c-col--2-xs c-col--order-3-xs
                    c-col--2-sm`)
        button(class=`c-btn c-btn--${type} c-btn--hover`) Button
      .c-col(class=`c-col--3 c-col--middle
                    c-col--2-xs c-col--order-5-xs
                    c-col--2-sm`)
        button(class=`c-btn c-btn--${type} c-btn--active`) Button
      .c-col(class=`c-col--3 c-col--middle
                    c-col--2-xs c-col--order-7-xs
                    c-col--2-sm`)
        button(class=`c-btn c-btn--${type} c-btn--focus`) Button

    each modifier in ['primary', 'danger', 'info', 'dark']
      h5= modifier
      .c-grid
        .c-col(class=`c-col--3 c-col--offset-3 c-col--hide-from-sm c-col--middle
                      c-col--1-xs c-col--offset-1-xs c-col--order-2-xs
                      c-col--2-sm c-col--offset-2-sm`)
          h6 hover
        .c-col(class=`c-col--3 c-col--hide-from-sm c-col--middle
                      c-col--1-xs c-col--offset-1-xs c-col--order-4-xs
                      c-col--2-sm`)
          h6 active
        div(class=`c-col c-col--3 c-col--hide-from-sm
                  c-col--1-xs c-col--offset-1-xs c-col--order-6-xs
                  c-col--2-sm`)
          h6 focus
        .c-col(class=`c-col--3 c-col--middle
                      c-col--2-xs c-col--offset-2-xs c-col--order-1-xs
                      c-col--2-sm`)
          button(class=`c-btn c-btn--${type} c-btn--${modifier} c-mr1`)
            .c-btn-content
              .c-icon
                svg
                    use(xlink:href='#workspace')
              span Button
          button(class=`c-btn c-btn--${type} c-btn--${modifier} c-btn--icon`)
            .c-btn-content
              .c-icon
                svg
                    use(xlink:href='#workspace')
        .c-col(class=`c-col--3 c-col--middle
                      c-col--2-xs c-col--order-3-xs
                      c-col--2-sm`)
          button(class=`c-btn c-btn--${type} c-btn--${modifier} c-btn--hover`) Button
        .c-col(class=`c-col--3 c-col--middle
                      c-col--2-xs c-col--order-5-xs
                      c-col--2-sm`)
          button(class=`c-btn c-btn--${type} c-btn--${modifier} c-btn--active`) Button
        .c-col(class=`c-col--3 c-col--middle
                      c-col--2-xs c-col--order-7-xs
                      c-col--2-sm`)
          button(class=`c-btn c-btn--${type} c-btn--${modifier} c-btn--focus`) Button

