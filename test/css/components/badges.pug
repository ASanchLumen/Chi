---
title: Badges
---

each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.a-h2= `Badge / ${type}`
    div
      each style in ['base', 'success', 'danger', 'info', 'dark', 'light']
        div(
          class="a-badge -mr1"
          class={
            [`-${type}`]: type != 'solid',
            [`-${style}`]: style != 'base'
          }
        )
          span= style

each type in ['solid', 'outline']
  div(class=`test-pill-${type}`)
    span.a-h2= `Badge / Pill / ${type}`
    table(cellpadding="0", cellspacing="0")
      tr
        each style in ['base', 'success', 'danger', 'info', 'dark', 'light']
          td
            div(
              class="a-badge -pill -mr1"
              class={
                [`-${type}`]: type != 'solid',
                [`-${style}`]: style != 'base'
              }
            )
              span 50
