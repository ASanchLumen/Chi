---
title: Input numbers
---

each size in ['default', 'sm', 'small', 'md', 'lg', 'large', 'xl']
  div(class=`test-${size}`)
    span.a-h2= `Text Input / ${size}`
    table(cellpadding="0", cellspacing="0", width="600px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .a-inputWrapper
                  input.a-input(
                    type="number"
                    class={
                      [`-${style}`]: style != 'default',
                      [`-${state}`]: state != 'disabled',
                      [`-${size}`]: size != 'default'
                    }
                    value="0"
                    disabled=state=='disabled'?'disabled': false
                  )
                  button(tabindex="-1")
                  button(tabindex="-1")
