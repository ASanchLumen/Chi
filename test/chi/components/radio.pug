---
title: Radio
---
.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    h5= `Radio / ${state}`
    .m-form__item.-row.-mb--1
      .a-radio
        input.a-radio__input(
          type="radio"
          id=`radio-${index}`
          class={
            [`-${state}`]: state == 'focus'
          }
          checked=state=='checked' ? 'checked' : false
          disabled=state=='disabled' ? 'disabled' : false
        )
        label.a-radio__label(for=`radio-${index}`) Radio

h2 Radio Button List
.test-states
  each state, index in ['default', 'hover', 'focus', 'disabled']
    h5= `Radio / ${state}`
    ul.m-form__item.-list(style="max-width:20rem")
      each element in [1, 2, 3, 4, 5]
        li.m-form__item.-row
          .a-radio
            input.a-radio__input(
              type="radio"
              id=`radio--${element}`
              name=`radio`
              class={
                [`-${state}`]: state == 'focus'
              }
              checked=state=='checked' ? 'checked' : false
              disabled=state=='disabled' ? 'disabled' : false
            )
            label.a-radio__label(for=`radio--${element}`)= `Radio-${element}`
