h4 Sizes
.test-sizes
  .example
    .chi-grid.-no-gutter
      .chi-col.-w--12.-w-md--6
        .-p--3
          each size in ['sm', 'md', 'lg', 'xl']
            p.-text--bold=`-${size}`
            nav.chi-pagination(role='navigation', aria-label='Pagination').-mb--2
              .chi-button-group
                each step in steps
                  if step == '0'
                    a(class=`chi-button -flat -${size}`, href='#', aria-label='Previous')
                      i(class="chi-icon icon-chevron-left", aria-hidden='true')
                      span.-sr--only Previous
                  else if step == '3'
                    a(class=`chi-button -flat -active -${size}`, href='#')= `${step}`
                  else if step == '6'
                    a(class=`chi-button -flat -${size}`, href='#', aria-label='Next')
                      i(class="chi-icon icon-chevron-right", aria-hidden='true')
                      span.-sr--only Next
                  else
                    a(class=`chi-button -flat -${size}`, href='#')= `${step}`
