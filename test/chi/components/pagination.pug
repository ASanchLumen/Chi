---
title: Pagination
---
- var steps = ['0', '1', '2', '3', '4', '5', '6'];

h4 Base
.example.-mb--3
  .-p--5
    nav.a-pagination(role='navigation', aria-label='Pagination')
      .m-btnGroup
        each step in steps
          if step == '0'
            a(class=`a-btn`, href='#', aria-label='Previous')
              span(aria-hidden='true') &laquo;
              span.-sr--only Previous
          else if step == '6'
            a(class=`a-btn`, href='#')
              span(aria-hidden='true', aria-label='Next') &raquo;
              span.-sr--only Next
          else
            a(class=`a-btn`, href='#')= `${step}`
