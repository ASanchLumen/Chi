---
title: Pagination
---
- var steps = ['0', '1', '2', '3', '4', '5', '6'];

h4 Base
.test-base
  .example
    .chi-grid.-no-gutter
      .chi-col.-w--12.-w-md--6
        .-p--3.-text--center
          nav.chi-pagination(role='navigation', aria-label='Pagination')
            .chi-button-group
              each step in steps
                if step == '0'
                  a(class=`chi-button -flat`, href='#', aria-label='Previous')
                    i(class="chi-icon icon-chevron-left", aria-hidden='true')
                    span.-sr--only Previous
                else if step == '6'
                  a(class=`chi-button -flat`, href='#')
                    i(class="chi-icon icon-chevron-right", aria-hidden='true')
                    span.-sr--only Next
                else
                  a(class=`chi-button -flat`, href='#')= `${step}`
      .chi-col.-w--12.-w-md--6
        .-p--3.-bg--black.-text--center
          nav.chi-pagination(role='navigation', aria-label='Pagination')
            .chi-button-group
              each step in steps
