---
title: Checkbox List
---

.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    h5= `Checkbox / ${state}`
    ul.m-listGroup(style="max-width:20rem")
      each element in [1, 2, 3, 4, 5]
        li.m-formGroup
          input.a-input(
          type="checkbox"
          id=`checkbox-${element}`
          class={
            [`-${state}`]: state == 'focus'
          }
          checked=state == 'checked' ? 'checked' : false
          disabled=state == 'disabled' ? 'disabled' : false
          )
          label(
          for=`checkbox-${element}`
          class={
            [`-${state}`]: state == 'hover'
          }
          )
          label(for=`checkbox-${element}`)= `Checkbox-${element}`
