- var day = 1;
- var weekS = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
- var weekS = ['S', 'M', 'T', 'W', 'T', 'F', 'S'];
- var today = 19;
- var active = 23;

.test-base
  span.a-h2 Base
  .-position--relative
    .m-datepicker.-week-starts-on-sun.-month-starts-on-thu
      .m-datepicker__month-row
        .prev
          i.a-icon.icon-chevron-left.-sm.-text--brand
        .m-datepicker__month
          | November 2018
        .next
          i.a-icon.icon-chevron-right.-sm.-text--brand
      .m-datepicker__day-names
        each weekDay in weekS
          .m-datepicker__week-day=weekDay
      .m-datepicker__days
        while day < 31
          .m-datepicker__day=day++

- var day = 1;

.test-today
  span.a-h2 Today
  .-position--relative
    .m-datepicker.-week-starts-on-sun.-month-starts-on-thu
      .m-datepicker__month-row
        .prev
          i.a-icon.icon-chevron-left.-sm.-text--brand
        .m-datepicker__month
          | November 2018
        .next
          i.a-icon.icon-chevron-right.-sm.-text--brand
      .m-datepicker__day-names
        each weekDay in weekS
          .m-datepicker__week-day=weekDay
      .m-datepicker__days
        while day < 31
          if day === today
            .m-datepicker__day.-today=day++
          else
            .m-datepicker__day=day++

- var day = 1;

