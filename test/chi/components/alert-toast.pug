---
title: Alert Toasts
---

.test-toast.-w100
  each val, type in {success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', light:'icon-circle-info-outline', dark:'icon-circle-info'}
    .m-alert.-toast.-m2(class=`-${type}`)
      if (type == 'success')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      else if (type == 'danger')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      else if (type == 'warning')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      else if (type == 'info')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      else if (type == 'light')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      else if (type == 'dark')
        .m-alert__content
          h5.a-h5= type
          = `This is a ${type} alert`
      button(class='a-btn -icon -close -small')
        .a-btn__content
          i.a-icon.icon-x

  h4 Has icon
  each val, type in {success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', light:'icon-circle-info-outline', dark:'icon-circle-info'}
