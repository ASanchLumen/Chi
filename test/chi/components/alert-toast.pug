      .m-alert.-toast.-titled.-m2(class=`-${type}`)
        .m-alert__content
          div(class=`a-icon -sm--2 -text--${type}`)
            svg
              use(xlink:href=`#${val}`)
          div
            div(class=`a-${size}`)= type
            = `This is a ${type} alert`
        button(class='a-btn -icon -close -sm')
          .a-btn__content
            .a-icon
