---
title: Spinner
---

h2 Backdrop

h3 Base
.example.-mb3(style="height:30rem;width:100%")
  .a-spinner__backdrop.-p6(style="position:relative;height:100%;")
    svg(class=`a-spinner__icon`,viewBox=`0 0 66 66`)
      title Loading
      circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h3 Inverse Backdrop
.example.-mb3(style="height:30rem;width:100%")
  .a-spinner__backdrop.-inverse.-p6(style="position:relative;height:100%;")
    svg(class=`a-spinner__icon`,viewBox=`0 0 66 66`)
      title Loading
      circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h2 Contextual

each size in ['default', 'small', 'large']
  each type in ['solid', 'outline']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.a-h3= `Button / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        each state in ['initial']
          tr
            td
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td
                input.a-btn.-m1.-ml2(
                type="button"
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                value="Button"
                disabled=state=='disabled' ? 'disabled' : false
                )
                a.a-btn.-icon.-m1(
                href="#"
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-spinner(class=`-${size}`)
                      svg(class=`a-spinner__icon`,viewBox=`0 0 66 66`)
                        title Loading
                        circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)
                button.a-btn.-m1(
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    span Button
                    .a-spinner(class=`-${size}`)
                      svg(class=`a-spinner__icon`,viewBox=`0 0 66 66`)
                        title Loading
                        circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

