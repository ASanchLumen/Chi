---
title: Progress-bar
---
.test-states
  each state, index in ['default', 'danger', 'info', 'warning', 'success']
    .example(style='width:1200px')
      .-p--3
        h3.-mb--3= `Progress-bar / ${state}`
        each value, index in [0,25,50,75,100]
          h5= `${value}%`
          progress( class=`-${state}` value=`${value}` max='100')
