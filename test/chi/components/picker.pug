h4 Type radio
h4 Base
.test-type-radio
  .example(style='width: 700px')
    .-p--3
      each type in ['Radio1','Radio2']
        .m-picker
          input(type="radio", class="a-picker", name='box', id=`ei-${type}`)
          label(for=`ei-${type}`)
            = type

h4 With radio
.test-with-radio
  .example.-mb--3(style='width: 700px')
    .-p--3
      each type in ['Radio1','Radio2']
        .m-picker
          input(type="radio", class="a-picker", name='box', id=`ri-${type}`)
          label(for=`ri-${type}`)
            .m-form__item.-row
              .a-radio
                input(type="radio", class="a-radio__input", id=`ri-${type}`)
                label.a-radio__label(for=`ri-${type}`)
                  = type

h3 Sizes
.test-sizes
  .example.-mb--3(style='width: 700px')
    .-p--4
      h4 -sm
      each type in ['Radio1 -sm','Radio2 -sm']
        .m-picker.-sm
          input(type="radio", class="a-picker", name='box', id=`ri-${type}`)
          label(for=`ri-${type}`)
            .m-picker__content--start
              = type
            .m-picker__content--end
              span.-text--bold.-text--body.-text--small.-text--right Data
              span.-text--normal.-text--muted.-text--small Value
      h4 -md
      each type in ['Radio1 -md','Radio2 -md']
        .m-picker.-md
          input(type="radio", class="a-picker", name='box', id=`ri-${type}`)
          label(for=`ri-${type}`)
            .m-picker__content--start
              = type
            .m-picker__content--end
              span.-text--bold.-text--body.-text--right Data
              span.-text--normal.-text--muted.-text--small Value
      h4 -lg
      each type in ['Radio1 -lg','Radio2 -lg']
        .m-picker.-lg
          input(type="radio", class="a-picker", name='box', id=`ri-${type}`)
          label(for=`ri-${type}`)
            .m-picker__content--start
              label.-text--bold
                = type
              span.-text--normal.-text--body.-text--small Data:
                strong  Value
            .m-picker__content--end
              span.-text--bold.-text--body.-text--large Data
