---
title: Drawer
---
- var sides = ['top', 'right', 'bottom', 'left'];
- var versions = [{"title": "no-backdrop", "classes": "", "testClass": "test-"}, {"title": "backdrop", "classes": "a-backdrop", "testClass": "test-backdrop-"}, {"title": "inverse backdrop", "classes": "a-backdrop -inverse", "testClass": "test-backdrop-inverse-"} ];

each side in sides
  each version in versions

    div(class=`${version.testClass}${side} -mb--3`)
      div(style='width: 320px')
        .a-h2= `Drawer / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          div(class=`m-drawer -${side} -active`)
            button(class='a-btn -icon -close')
              .a-btn__content
                i.a-icon.icon-x
            .m-drawer__content
              .-px--2.-text Drawer content here

    div(class=`${version.testClass}${side}-headed -mb--3`)
      div(style='width: 320px')
        .a-h2= `Drawer / with head / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          div(class=`m-drawer -${side} -active`)
            .m-drawer__header
              button(class='a-btn -icon -close')
                .a-btn__content
                  i.a-icon.icon-x
            .m-drawer__content
              .-px--2.-text Drawer content here
