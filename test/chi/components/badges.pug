---
title: Badges

---

each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.-text--h2= `Badge / ${type}`
    table(cellpadding="0", cellspacing="0")
          each style in ['base', 'primary', 'success', 'warning', 'danger', 'dark', 'muted', 'secondary', 'light']
            if (style === 'secondary' || style === 'light')
              td.-bg--black
                .-mr--2
                  badge.chi-badge.-m--1(
                  class={
                    [`-${type}`]: type !== 'solid',
                    [`-${style}`]: style !== 'default',
                    [`-${state}`]: state !== 'initial',
                    [`-${size}`]: size !== 'default'
                  }
                  disabled=state === 'disabled' ? 'disabled' : false
                  )
                    span= style
            else
              td
                .-mr--2
                  badge.chi-badge.-m--1(
                  class={
                    [`-${type}`]: type !== 'solid',
                    [`-${style}`]: style !== 'default',
                    [`-${state}`]: state !== 'initial',
                    [`-${size}`]: size !== 'default'
                  }
                  disabled=state === 'disabled' ? 'disabled' : false
                  )
                    span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            span Badge
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
            .chi-icon
              svg
                use(xlink:href='#icon-atom')


h2 Text Transform
.test-text-transform
  .example.-mb--1
    .p.-text--bold
      | Uppercase   
      .chi-badge.-text--uppercase
        span Badge
    .p.-text--bold 
      | Lowercase   
      .chi-badge.-text--lowercase
        span Badge
    .p.-text--bold 
      | Capitalized
      .chi-badge.-text--capitalized
        span Badge

