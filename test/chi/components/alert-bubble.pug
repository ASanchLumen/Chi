      .m-alert__content
        i.a-icon.-sm--2(class =`${val} -text--${type}`)
        div
          h5.a-h5= type
          = `This is a ${type} alert`
      button(class='a-btn -icon -close -sm')
        .a-btn__content
          i.a-icon.icon-x
