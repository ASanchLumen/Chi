  .chi-dropdown__menu-item
    .chi-checkbox
      input#checkbox1.chi-checkbox__input(type='checkbox')
      label.chi-checkbox__label(for='checkbox1')
        i.chi-icon.icon-logo-centurylink
        |         Item 1
  .chi-dropdown__menu-item
    .chi-checkbox
      input#checkbox2.chi-checkbox__input(type='checkbox', disabled='')
      label.chi-checkbox__label(for='checkbox2')
        i.chi-icon.icon-logo-centurylink
        |         Item 2
  .chi-dropdown__menu-item
    .chi-checkbox
      input#checkbox3.chi-checkbox__input(type='checkbox', checked='')
      label.chi-checkbox__label(for='checkbox3')
        i.chi-icon.icon-logo-centurylink
        |         Item 3
  .chi-dropdown__menu-item
    .chi-checkbox
      input#checkbox4.chi-checkbox__input(type='checkbox')
      label.chi-checkbox__label(for='checkbox4')
        i.chi-icon.icon-logo-centurylink
        |         Item 4

