---
title: Badges
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')
script(nomodule='' src='../../js/ce/ux-chi-ce/ux-chi-ce.js')

each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.-text--h2= `Badge / ${type}`
    table(cellpadding="0", cellspacing="0")
      each style in ['base', 'primary', 'success', 'warning', 'danger', 'dark', 'muted', 'secondary', 'light']
        if (style === 'secondary' || style === 'light')
          td.-bg--black
            .-mr--2
              chi-badge.-m--1(
              color=style
              size= size !== 'default' ? size : ''
              variant= type === 'solid' ? '' : type
              disabled= state === 'disabled'
              extra-class= `-${state}`
              )
                span= style
        else
          td
            .-mr--2
              chi-badge.-m--1(
              color=style
              size= size !== 'default' ? size : ''
              variant= type === 'solid' ? '' : type
              disabled= state === 'disabled'
              extra-class= `-${state}`
              )
                span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1', id=`badge-${size}`)
          chi-icon(icon='atom')
          span Badge
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
          span Badge
          chi-icon(icon='atom')
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
          chi-icon(icon='atom')
          span Badge
          chi-icon(icon='atom')

h2 Text Transform
.test-text-transform
  .example.-mb--1
    each transform, text in { BADGE: 'Uppercase ', badge: 'Lowercase ', Badge: 'Capitalized' }
      .p.-text--bold= transform
        chi-badge(text-transform= transform, id=`badge-${transform}`)= text

