.test-expansion-panel-pending-bordered.-mb--3(style="min-width: 20rem")
    chi-expansion-panel(heading='Expansion panel #7', bordered=true, data-cy='test-pending-bordered')

.test-expansion-panel-disabled-bordered.-mb--3(style="min-width: 20rem")
    chi-expansion-panel(heading='Expansion panel #8', state="disabled", bordered=true, data-cy='test-disabled-bordered')
